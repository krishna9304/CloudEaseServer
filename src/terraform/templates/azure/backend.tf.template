terraform {
  required_version = ">= 1.7.5"
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = ">= 3.60.0"
    }
  }

  backend "azurerm" {
    resource_group_name  = "<state_rg_name>"
    storage_account_name = "<state_storage_account_name>"
    container_name       = "<state_container_name>"
    key                  = "<state_filename>.tfstate"
  }
}



